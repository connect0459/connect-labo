---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE } from "../consts";
import profileImage from "../assets/IMG_7559.jpg";
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead
      title={`About - ${SITE_TITLE}`}
      description="中岡暉（なかおかあきら）のプロフィール"
    />
  </head>
  <body class="font-['Atkinson',sans-serif] bg-white text-gray-900">
    <Header />
    <main class="max-w-4xl mx-auto px-4 py-12">
      {/* ヘッダーセクション */}
      <div class="text-center mb-16">
        <div class="mb-8 flex justify-center">
          <Image
            src={profileImage}
            alt="中岡暉のプロフィール画像"
            width={200}
            height={200}
            class="rounded-full shadow-lg"
          />
        </div>
        <h1 class="text-4xl font-bold mb-4 text-gray-900">中岡 暉</h1>
        <p class="text-xl text-gray-600 mb-2">Akira Nakaoka / connect0459</p>
        <p class="text-lg text-gray-700">Web/モバイルアプリエンジニア</p>
      </div>

      {/* 自己紹介 */}
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4 text-gray-900 border-b-2 border-blue-500 pb-2">
          自己紹介
        </h2>
        <p class="text-gray-700 leading-relaxed">駆け出しエンジニアです。</p>
      </section>

      {/* スキルセット */}
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-6 text-gray-900 border-b-2 border-blue-500 pb-2">
          スキルセット
        </h2>

        {/* 言語 */}
        <div class="mb-8">
          <h3 class="text-xl font-bold mb-4 text-gray-800">言語 & フレームワーク</h3>
          <div class="space-y-6">
            {/* PHP */}
            <div>
              <h4 class="font-bold text-lg mb-2 text-gray-700">PHP</h4>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-sm">
                  Laravel
                </span>
                <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-sm">
                  Slim Framework
                </span>
              </div>
            </div>

            {/* TypeScript */}
            <div>
              <h4 class="font-bold text-lg mb-2 text-gray-700">TypeScript</h4>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                  React
                </span>
                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                  Next.js
                </span>
                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                  React Router
                </span>
                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                  Astro
                </span>
                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm"> Qwik </span>
              </div>
            </div>
          </div>
        </div>

        {/* データベース */}
        <div class="mb-8">
          <h3 class="text-xl font-bold mb-4 text-gray-800">データベース</h3>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm"> MySQL </span>
          </div>
        </div>

        {/* インフラ */}
        <div>
          <h3 class="text-xl font-bold mb-4 text-gray-800">インフラ</h3>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 bg-cyan-100 text-cyan-800 rounded-full text-sm"> Docker </span>
          </div>
        </div>
      </section>

      {/* SNS・リンク */}
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-6 text-gray-900 border-b-2 border-blue-500 pb-2">
          SNS & Links
        </h2>
        <div class="space-y-3">
          <a
            href="https://x.com/connect0459"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              ></path>
            </svg>
            <div>
              <div class="font-bold text-gray-900">X (Twitter)</div>
              <div class="text-sm text-gray-600">@connect0459</div>
            </div>
          </a>

          <a
            href="https://github.com/connect0459"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            <div>
              <div class="font-bold text-gray-900">GitHub</div>
              <div class="text-sm text-gray-600">@connect0459</div>
            </div>
          </a>

          <a
            href="https://zenn.dev/connect0459"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M.264 23.771h4.984c.264 0 .498-.147.645-.352L19.614.874c.176-.293-.029-.645-.352-.645h-4.72c-.264 0-.498.147-.645.352L.03 23.361c-.176.322.029.645.323.645h.029zm8.601-8.013l-2.64 4.719h-3.75l2.64-4.719h3.75z"
              ></path>
            </svg>
            <div>
              <div class="font-bold text-gray-900">Zenn</div>
              <div class="text-sm text-gray-600">@connect0459</div>
            </div>
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
